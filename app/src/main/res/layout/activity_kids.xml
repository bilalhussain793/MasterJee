<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Kids">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/len"
            android:hint="Length"
            android:background="@drawable/button_disabled"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/width"
            android:hint="Width"
            android:background="@drawable/button_disabled"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/ok"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_rect"
            android:text="ok"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button

                android:id="@+id/b"
                android:background="@drawable/k1"
                android:layout_width="120dp"
                android:layout_height="100dp" />
            <TextView

                android:layout_marginLeft="5dp"
                android:text="Fashion 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/design2"
                android:background="@drawable/k2"
                android:layout_width="120dp"
                android:layout_height="100dp" />
            <TextView

                android:layout_marginLeft="5dp"
                android:text="Fashion 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/design3"
                android:background="@drawable/k3"
                android:layout_width="120dp"
                android:layout_height="100dp" />
            <TextView

                android:layout_marginLeft="5dp"
                android:text="Fashion 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/design4"
                android:background="@drawable/k4"
                android:layout_width="120dp"
                android:layout_height="100dp" />
            <TextView

                android:layout_marginLeft="5dp"
                android:text="Fashion 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/design5"
            android:background="@drawable/d1"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />
        <TextView

            android:layout_marginLeft="5dp"
            android:text="Design "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Selectetd Item Price:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@drawable/button_disabled"
            android:hint="0"
            android:id="@+id/current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Total Price:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@drawable/button_disabled"
            android:hint="0"
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:text="Your Orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/button_disabled"
        android:id="@+id/selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#EEABAB"
        android:textColor="#FFFFFF"
        android:text="Enter Payment Number=Easypaisa:Jazzcash:Alfa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />







    <EditText
        android:id="@+id/no"
        android:background="@drawable/button_disabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/cc"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_rect"
        android:text="place order"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>