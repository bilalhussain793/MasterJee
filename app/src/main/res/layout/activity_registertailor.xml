<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registertailor">




    <TextView
        android:background="@color/button"
        android:textColor="@android:color/background_light"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Tailor"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="#2F82E4E1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:text="Click to add \nimage here"/>
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:background="#00ffffff"
        android:drawableRight="@android:drawable/ic_menu_call"
        android:hint="Phone "
        android:inputType="phone"
        android:maxLength="13"
        android:maxLines="1"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        android:drawableTint="#0073ff"
        android:textColorHint="@color/common_google_signin_btn_text_light"
        android:textSize="14dp" />



    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableRight="@android:drawable/ic_menu_edit"
        android:hint="Tailor name"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:drawableTint="@color/button"
        android:background="#00ffffff"
        android:paddingLeft="5dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/common_google_signin_btn_text_light"
        android:textSize="14dp" />



    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:background="#00ffffff"
        android:drawableRight="@android:drawable/ic_dialog_email"
        android:hint="Shop Name"
        android:inputType="textEmailAddress"
        android:maxLength="50"
        android:maxLines="1"
        android:singleLine="true"
        android:drawableTint="@color/button"
        android:textColorHint="@color/common_google_signin_btn_text_light"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:background="#00ffffff"
        android:drawableRight="@android:drawable/ic_lock_idle_lock"
        android:hint="Password"
        android:drawableTint="@color/button"
        android:inputType="textPassword"
        android:maxLength="50"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/common_google_signin_btn_text_light"
        android:textSize="14dp" />



    <EditText
        android:id="@+id/et_cp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:background="#00ffffff"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:drawableRight="@android:drawable/ic_lock_idle_lock"
        android:drawableTint="@color/button"
        android:maxLines="1"
        android:textSize="14dp"
        android:maxLength="50"
        android:textColorHint="@color/common_google_signin_btn_text_light"
        android:singleLine="true" />



