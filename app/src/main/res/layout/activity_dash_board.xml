<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".DashBoard">


    <LinearLayout
        android:background="#BEB8B8"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"

    >

    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:id="@+id/imv"/>
</android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="User Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:hint="Name"
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/phone1"
                android:hint="Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button

           android:layout_marginLeft="110dp"
            android:id="@+id/logout"
            android:layout_width="30dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"

            android:background="@drawable/logout"

            android:textAllCaps="false"
            />

    </LinearLayout>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content">

    <ImageView

        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/imageview"
        android:layout_width="match_parent"
        android:layout_height="240dp" />
</android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/men"
                android:background="@drawable/men"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Men" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/women"
                android:background="@drawable/women"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:text="Men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/kid"
                android:background="@drawable/kids"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:text="Kids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/ready"
                android:background="@drawable/ready"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:layout_marginLeft="8dp"
                android:text="Ready"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button

                android:id="@+id/unstich"
                android:background="@drawable/unstich"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:text="Unstich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/men"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:text="Men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

<LinearLayout
android:background="#BEB8B8"
android:layout_marginTop="55dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
android:id="@+id/his"
        android:background="@drawable/history"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/cnt"
        android:layout_marginLeft="25dp"
        android:background="@drawable/contact"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/sze"
        android:layout_marginLeft="20dp"
        android:background="@drawable/size"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/abt"
        android:layout_marginLeft="25dp"
        android:background="@drawable/about"
        android:layout_width="40dp"
        android:layout_height="40dp" />


    <Button
        android:layout_marginLeft="25dp"
        android:background="@drawable/m"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <Button
        android:layout_marginLeft="20dp"
        android:background="@drawable/o"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <Button
        android:layout_marginLeft="20dp"
        android:background="@drawable/ii"
        android:layout_width="40dp"
        android:layout_height="40dp" />
</LinearLayout>
</LinearLayout>